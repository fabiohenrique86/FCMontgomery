    <div id="divRegisterNow" style="position: fixed; right: 5pt; z-index: 100; bottom: 35pt; : #0F2A56; color: whitesmoke; border-radius: 10px; padding: 10px; display: none; background-color: #0F2A56">
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group">
                    Fill in the form below and be part of our team!
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group">
                    <input class="form-control" id="name" type="text" placeholder="Name">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group">
                    <input class="form-control" id="email" type="text" placeholder="E-mail">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group">
                    <select class="form-control" id="category">
                        <option value="">Category</option>
                        <option value="U8">U8</option>
                        <option value="U9">U9</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group">
                    <input class="form-control" id="telephone" type="text" placeholder="Telephone">
                </div>
            </div>
        </div>
        <div class="row text-center">
            <div class="col-lg-12">
                <div class="form-group">
                    <button type="button" class="btn btn-info">Complete Registration</button>
                    <button id="btnClose" type="button" class="btn btn-warning">Close</button>
                </div>
            </div>
        </div>
    </div>
    <div id="btnRegisterNow" style="position: fixed; right: 5pt; z-index: 100; bottom: 5pt">
        <button type="button" class="btn btn-info">Register Now</button>
    </div>
    @Scripts.Render("~/bundles/scripts")
    <script type="text/javascript">

        $(document).ready(function () {
                
            $("#btnRegisterNow").click(function ()
            {
                if ($("#divRegisterNow").is(':visible'))
                {
                    $("#divRegisterNow").hide();
                }
                else
                {
                    $("#divRegisterNow").show();
                }                
            });

            $("#btnClose").click(function () {
                $("#divRegisterNow").hide();
            });

        });

    </script>
    @RenderSection("scripts", required: false)
